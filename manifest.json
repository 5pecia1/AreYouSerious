{
  "manifest_version": 2,

  "name": "Are you serious?",
  "description": "To prevent unreasonable Internet use",
  "version": "0.3.0",

  "browser_action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "activeTab",
    "storage",
    "http://*/",
    "https://*/"
  ]
}
