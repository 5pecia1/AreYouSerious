{
  "manifest_version": 2,

  "name": "Are you serious?",
  "description": "To prevent unreasonable Internet use",
  "version": "0.2.2",

  "browser_action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "activeTab",
    "storage",
    "http://*/",
    "https://*/"
//    "tabs",
//    "<all_urls>"
  ]
}
